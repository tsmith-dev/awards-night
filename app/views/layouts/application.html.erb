<!DOCTYPE html>
<html>
<head>
  <title>Awards Night</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= flash[:notice] unless nil? %>

<h1><%= Show.first.name %></h1> <!-- fix -->

<%= yield %>

  <% if session[:email] %>
    <%= button_to "Logout #{@current_user.fname}", logout_path, method: :delete %>
  <% end %>
</body>
</html>
